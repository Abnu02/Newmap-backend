generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Employee {
  id         String     @id @default(cuid())
  firstName  String
  lastName   String
  fullName   String
  department String
  avatarUrl  String?
  email      String     @unique
  phone      String?
  gender     String?
  password   String
  isActive   Boolean    @default(true)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  devices    Device[]
  locations  Location[]
  presence   Presence?

  @@map("employees")
}

model Device {
  id          String   @id @default(cuid())
  employeeId  String
  platform    String
  deviceToken String?
  lastSeenAt  DateTime @default(now())
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  employee    Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, platform])
  @@map("devices")
}

model Location {
  id         String   @id @default(cuid())
  employeeId String
  latitude   Float
  longitude  Float
  accuracy   Float?
  altitude   Float?
  speed      Float?
  heading    Float?
  battery    Int?
  address    String?
  timestamp  DateTime @default(now())
  createdAt  DateTime @default(now())
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([employeeId, timestamp])
  @@map("locations")
}

model Presence {
  id         String   @id @default(cuid())
  employeeId String   @unique
  isOnline   Boolean  @default(false)
  lastSeenAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@map("presence")
}

model Manager {
  id        String   @id @default(cuid())
  fullName  String
  email     String   @unique
  password  String
  company   String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("managers")
}
